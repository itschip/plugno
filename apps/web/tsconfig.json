{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@typings/*": ["typings/*"],
			"@components/*": ["components/*"],
			"@utils/*": ["utils/*"],
			"@models/*": ["models/*"],
			"@store/*": ["store/*"]
		},
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"../../packages/ui/src/**/*"
	],
	"exclude": ["node_modules"]
}
