{
  "name": "plugno",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "packages/*",
    "api",
    "native"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "native": "pnpm --filter @plugno/native",
    "frontend": "pnpm --filter @plugno/frontend",
    "api": "cd ./api && go run main.go",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "latest",
    "eslint-config-custom": "workspace:^1.0.0",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.14.2"
}
